// Feen - Secure API Key Sharing Platform
// Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
// Authentication & Users
// ==========================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials auth
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  apiKeys       ApiKey[]
  sharedKeys    SharedKey[]
  usageLogs     UsageLog[]
  subscriptions Subscription[]
  marketplace   MarketplaceListing[]
  purchases     MarketplacePurchase[]
  teams         TeamMember[]
  ownedTeams    Team[]

  @@map("users")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

// ==========================================
// Teams & Organizations
// ==========================================

model Team {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  image       String?
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner     User            @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  members   TeamMember[]
  apiKeys   ApiKey[]
  usageLogs UsageLog[]

  @@map("teams")
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  role      TeamRole @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@map("team_members")
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

// ==========================================
// API Keys
// ==========================================

model ApiKey {
  id           String       @id @default(cuid())
  name         String
  description  String?
  provider     ApiProvider
  encryptedKey String       // Encrypted API key
  keyHash      String       // Hash for validation
  keyPrefix    String       // First few chars for display (e.g., "sk-...abc")
  userId       String
  teamId       String?
  isActive     Boolean      @default(true)
  expiresAt    DateTime?
  lastUsedAt   DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  // Rate limiting
  rateLimit    Int          @default(1000) // requests per minute
  dailyLimit   Int          @default(10000) // requests per day

  // Relations
  user         User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  team         Team?             @relation(fields: [teamId], references: [id], onDelete: SetNull)
  sharedKeys   SharedKey[]
  usageLogs    UsageLog[]
  marketplace  MarketplaceListing?

  @@index([userId])
  @@index([teamId])
  @@index([keyHash])
  @@map("api_keys")
}

enum ApiProvider {
  OPENAI
  ANTHROPIC
  GOOGLE
  AZURE_OPENAI
  COHERE
  MISTRAL
  GROQ
  TOGETHER
  REPLICATE
  HUGGINGFACE
  BYTEZ
  CUSTOM
}

// ==========================================
// Key Sharing
// ==========================================

model SharedKey {
  id            String         @id @default(cuid())
  apiKeyId      String
  ownerId       String
  accessToken   String         @unique // Token used to access the shared key
  tokenHash     String         @unique // Hash for validation
  name          String?
  description   String?
  permissions   Json           // What operations are allowed
  rateLimit     Int            @default(100) // Override rate limit
  dailyLimit    Int            @default(1000) // Override daily limit
  usageCount    Int            @default(0)
  maxUsage      Int?           // Max total uses (null = unlimited)
  isActive      Boolean        @default(true)
  expiresAt     DateTime?
  lastUsedAt    DateTime?
  allowedIPs    String[]       // IP whitelist (empty = all allowed)
  allowedModels String[]       // Model whitelist (empty = all allowed)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  apiKey    ApiKey     @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)
  owner     User       @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  usageLogs UsageLog[]

  @@index([accessToken])
  @@index([tokenHash])
  @@map("shared_keys")
}

// ==========================================
// Usage Tracking
// ==========================================

model UsageLog {
  id          String    @id @default(cuid())
  apiKeyId    String?
  sharedKeyId String?
  userId      String?
  teamId      String?
  provider    ApiProvider
  model       String?
  endpoint    String
  method      String
  statusCode  Int
  requestTokens  Int?
  responseTokens Int?
  totalTokens    Int?
  latencyMs   Int
  cost        Decimal?  @db.Decimal(10, 6)
  ipAddress   String?
  userAgent   String?
  metadata    Json?
  createdAt   DateTime  @default(now())

  apiKey    ApiKey?    @relation(fields: [apiKeyId], references: [id], onDelete: SetNull)
  sharedKey SharedKey? @relation(fields: [sharedKeyId], references: [id], onDelete: SetNull)
  user      User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  team      Team?      @relation(fields: [teamId], references: [id], onDelete: SetNull)

  @@index([apiKeyId])
  @@index([sharedKeyId])
  @@index([userId])
  @@index([createdAt])
  @@map("usage_logs")
}

// ==========================================
// Marketplace
// ==========================================

model MarketplaceListing {
  id           String   @id @default(cuid())
  apiKeyId     String   @unique
  sellerId     String
  title        String
  description  String
  provider     ApiProvider
  models       String[] // Available models
  pricePerRequest Decimal @db.Decimal(10, 6)
  pricePerToken   Decimal? @db.Decimal(10, 8)
  monthlyPrice    Decimal? @db.Decimal(10, 2)
  isActive     Boolean  @default(true)
  isFeatured   Boolean  @default(false)
  rating       Decimal  @default(0) @db.Decimal(2, 1)
  totalSales   Int      @default(0)
  totalRevenue Decimal  @default(0) @db.Decimal(12, 2)
  tags         String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  apiKey    ApiKey                @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)
  seller    User                  @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  purchases MarketplacePurchase[]
  reviews   MarketplaceReview[]

  @@index([provider])
  @@index([isActive])
  @@map("marketplace_listings")
}

model MarketplacePurchase {
  id          String   @id @default(cuid())
  listingId   String
  buyerId     String
  accessToken String   @unique // Generated access token for buyer
  status      PurchaseStatus @default(ACTIVE)
  usageLimit  Int?
  usageCount  Int      @default(0)
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  listing MarketplaceListing @relation(fields: [listingId], references: [id], onDelete: Cascade)
  buyer   User               @relation(fields: [buyerId], references: [id], onDelete: Cascade)

  @@index([buyerId])
  @@index([accessToken])
  @@map("marketplace_purchases")
}

model MarketplaceReview {
  id        String   @id @default(cuid())
  listingId String
  reviewerId String
  rating    Int      // 1-5
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  listing MarketplaceListing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@unique([listingId, reviewerId])
  @@map("marketplace_reviews")
}

enum PurchaseStatus {
  ACTIVE
  EXPIRED
  CANCELLED
  SUSPENDED
}

// ==========================================
// Billing & Subscriptions
// ==========================================

model Subscription {
  id                   String   @id @default(cuid())
  userId               String
  stripeCustomerId     String?  @unique
  stripeSubscriptionId String?  @unique
  stripePriceId        String?
  plan                 PlanType @default(FREE)
  status               SubscriptionStatus @default(ACTIVE)
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("subscriptions")
}

enum PlanType {
  FREE
  STARTER
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  PAST_DUE
  PAUSED
  TRIALING
}

// ==========================================
// Audit Log
// ==========================================

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  resource  String
  resourceId String?
  details   Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}
